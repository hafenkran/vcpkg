-set(SOL2_LIBRARIES_SINGLE sol2_single)
+if(TARGET sol2_single)
+    get_target_property(SOL_SINGLE_INCLUDE_DIRS
+        sol2_single INTERFACE_INCLUDE_DIRECTORIES)
