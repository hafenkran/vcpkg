diff --git a/CMakeLists.txt b/CMakeLists.txt
index a5b89d9ac..f4e348e56 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -72,20 +72,30 @@ else()
     set (wpilib_config_dir share/wpilib)
 endif()

+if (USE_VCPKG_LIBUV)
+set (LIBUV_VCPKG_REPLACE "find_package(unofficial-libuv CONFIG)")
+endif()
